<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">





    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/washandiron"
            android:text="Wash and Iron"
            android:textColor="#3DB1FF"
            android:textSize="15sp"
            android:layout_marginTop="@dimen/nav_header_vertical_spacing"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginRight="@dimen/nav_header_vertical_spacing"
            android:background="@drawable/buttonshape" />

        <Button
            android:id="@+id/wash"
            android:text="Wash"
            android:textColor="#3DB1FF"
            android:textSize="15sp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/nav_header_vertical_spacing"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginRight="@dimen/nav_header_vertical_spacing"
            android:background="@drawable/buttonshape" />
        <Button
        android:id="@+id/iron"
            android:text="Iron"
            android:textColor="#3DB1FF"
            android:textSize="15sp"
            android:layout_marginTop="@dimen/nav_header_vertical_spacing"

            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/buttonshape"/>
        <Button
            android:id="@+id/dryclean"
            android:text="Dry Cleaning"
            android:textColor="#3DB1FF"
            android:textSize="15sp"
            android:layout_marginTop="@dimen/nav_header_vertical_spacing"

            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/buttonshape"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/nav_header_vertical_spacing"
        android:layout_height="wrap_content">
    <TableLayout
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_height="wrap_content">

        <TableRow
            android:fitsSystemWindows="true">
            <TextView
                android:text="Cloth"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_weight="1"/>
            <TextView
                android:text="Cost"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:gravity="end"
                android:layout_weight="1"/>

        </TableRow>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rate_card_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
    </TableLayout>
    </LinearLayout>
</LinearLayout>