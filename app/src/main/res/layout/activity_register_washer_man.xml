<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sahil.clickclean.Views.RegisterWasherMan">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="500dp">



    <EditText
        android:id="@+id/firstname"
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/password"
        android:layout_marginTop="59dp"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:ems="10"
        android:backgroundTint="@color/colorPrimary"
        android:hint=" Firstname"
        android:inputType="textPersonName"
        android:layout_alignLeft="@+id/password" />

    <EditText
        android:id="@+id/password"
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:ems="10"
        android:hint=" Password"
        android:backgroundTint="@color/colorPrimary"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/address"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_map_black_24dp"
        android:ems="10"
        android:hint=" Locality"
        android:backgroundTint="@color/colorPrimary"
        android:inputType="textPostalAddress" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/password"
        android:layout_below="@+id/password"
        android:drawableLeft="@drawable/ic_local_phone_black_24dp"
        android:ems="10"
        android:hint=" Phone"
        android:backgroundTint="@color/colorPrimary"
        android:inputType="phone"
        android:layout_alignLeft="@+id/password" />

    <EditText
        android:id="@+id/lastname"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/password"
        android:layout_alignTop="@+id/firstname"
        android:ems="10"
        android:hint="Lastname"
        android:inputType="textPersonName"
        android:backgroundTint="@color/colorPrimary"
        android:layout_alignRight="@+id/password" />

    <EditText
        android:id="@+id/email"
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstname"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:ems="10"
        android:hint=" Email"
        android:backgroundTint="@color/colorPrimary"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/secondary_phone"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/password"
        android:layout_below="@+id/password"

        android:drawableLeft="@drawable/ic_local_phone_black_24dp"
        android:ems="10"
        android:hint=" Other Phone"
        android:backgroundTint="@color/colorPrimary"
        android:inputType="phone"
        android:layout_alignRight="@+id/password" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address"
        android:id="@+id/ad"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/flataddress"
            android:layout_width="354dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@drawable/ic_home_black_24dp"
            android:ems="10"
            android:backgroundTint="@color/colorPrimary"
            android:hint=" House No"
            android:inputType="textPostalAddress" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/dfa"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/address"
        android:layout_below="@+id/ad"
        android:layout_alignRight="@+id/address">

        <AutoCompleteTextView
            android:id="@+id/city"
            android:layout_width="349dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:drawableLeft="@drawable/ic_home_black_24dp"
            android:hint=" City"
            android:inputType="textPostalAddress" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/dfasdfas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/firstname"
        android:layout_below="@+id/ad"
        android:layout_alignLeft="@+id/firstname">

        <EditText
            android:id="@+id/pincode"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/password"
            android:layout_alignRight="@+id/password"
            android:layout_below="@+id/flataddress"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:backgroundTint="@color/colorPrimary"
            android:hint="Pincode"
            android:inputType="number" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/register_washerman"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="53dp"
        android:background="@drawable/rounded_corner"
        android:gravity="center"
        android:textColor="@color/white"
        android:text=" Register WasherMan" />
</RelativeLayout>
</android.support.v4.widget.NestedScrollView>