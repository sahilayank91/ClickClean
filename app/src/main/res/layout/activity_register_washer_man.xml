<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="sahil.clickclean.Views.RegisterWasherMan">


    <WebView
        android:id="@+id/wvAttribution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Attribution"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/firstname"
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="56dp"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:ems="10"
        android:hint=" Firstname"
        android:inputType="textPersonName"
        android:layout_marginLeft="0dp"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@+id/password"
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:ems="10"
        android:hint=" Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/address"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:drawableLeft="@drawable/ic_map_black_24dp"
        android:ems="10"
        android:hint=" Locality"
        android:inputType="textPostalAddress" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/wvAttribution"
        android:layout_below="@+id/password"
        android:drawableLeft="@drawable/ic_local_phone_black_24dp"
        android:ems="10"
        android:hint=" Phone"
        android:inputType="phone"
        android:layout_alignLeft="@+id/wvAttribution" />

    <EditText
        android:id="@+id/lastname"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/firstname"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:hint="Lastname"
        android:inputType="textPersonName"
        android:layout_alignParentRight="true" />

    <EditText
        android:id="@+id/email"
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/wvAttribution"
        android:layout_below="@+id/firstname"
        android:ems="10"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:hint=" Email"
        android:inputType="textEmailAddress"
        android:layout_alignLeft="@+id/wvAttribution" />

    <EditText
        android:id="@+id/secondary_phone"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/password"
        android:layout_below="@+id/password"

        android:drawableLeft="@drawable/ic_local_phone_black_24dp"
        android:ems="10"
        android:hint=" Other Phone"
        android:inputType="phone"
        android:layout_alignRight="@+id/password" />

    <EditText
        android:id="@+id/flataddress"
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_home_black_24dp"
        android:ems="10"
        android:hint=" House No"
        android:inputType="textPostalAddress" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/register_washerman"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="105dp"
        android:drawableLeft="@drawable/ic_person_pin_black_24dp"
        android:text=" Register WasherMan" />

</RelativeLayout>