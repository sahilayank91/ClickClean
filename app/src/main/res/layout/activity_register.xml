<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Views.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_vertical_margin">

        <EditText
            android:id="@+id/firstname"
            android:layout_width="349dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:hint=" Enter your Firstname"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="54dp"
            tools:layout_editor_absoluteY="146dp" />

        <EditText
            android:id="@+id/lastname"
            android:layout_width="349dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/nav_header_vertical_spacing"
            android:ems="10"
            android:hint=" Enter your Lastname"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="54dp"
            tools:layout_editor_absoluteY="146dp"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:layout_alignLeft="@+id/firstname" />

        <EditText
            android:id="@+id/useremail"
            android:layout_marginTop="@dimen/nav_header_vertical_spacing"

            android:layout_width="349dp"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint=" Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/userpassword"
            android:layout_width="349dp"
            android:layout_marginTop="@dimen/nav_header_vertical_spacing"

            android:layout_height="wrap_content"

            android:ems="10"
            android:drawableLeft="@drawable/ic_lock_black_24dp"
            android:hint=" Enter your Password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/userphone"
            android:layout_width="349dp"
            android:layout_marginTop="@dimen/nav_header_vertical_spacing"

            android:layout_height="wrap_content"

            android:ems="10"
            android:hint=" Enter your Mobile No"
            android:inputType="phone"
            android:drawableLeft="@drawable/ic_local_phone_black_24dp"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="260dp" />

        <EditText
            android:id="@+id/useraddress"
            android:layout_width="349dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/nav_header_vertical_spacing"

            android:drawableLeft="@drawable/ic_map_black_24dp"

            android:ems="10"
            android:hint=" Enter your Locality"
            android:inputType="textPostalAddress"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="316dp" />

        <EditText
            android:id="@+id/userflatAddress"
            android:layout_width="349dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_home_black_24dp"

            android:layout_marginTop="@dimen/nav_header_vertical_spacing"
            android:ems="10"
            android:hint=" Enter your Flat Address"
            android:inputType="textPostalAddress"
       />

        <Button
            android:id="@+id/register"
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:text="Register"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:elevation="@dimen/activity_vertical_margin"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />


    </LinearLayout>
</android.support.v4.widget.NestedScrollView>