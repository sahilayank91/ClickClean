<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="58dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center_horizontal"
    android:visibility="visible"
    tools:ignore="RtlCompat"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/cloth_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:textColor="@color/background_gradient_start"
            android:text="Uppers (Shirt and T-shirts )" />

        <ImageButton
            android:id="@+id/cloth_add"
            android:layout_width="38dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/cloth_num"
            app:srcCompat="@drawable/ic_add_circle_outline_black_24dp" />

        <ImageButton
            android:id="@+id/cloth_minus"
            android:layout_width="34dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="101dp"
            app:srcCompat="@drawable/ic_indeterminate_check_box_black_24dp" />

        <TextView
            android:id="@+id/cloth_num"
            android:layout_width="38dp"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"

            android:clickable="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="-101dp"
            android:layout_toEndOf="@+id/cloth_minus"
            android:gravity="center_vertical"
            android:text="fasd"
            android:textAlignment="center" />

    </RelativeLayout>

