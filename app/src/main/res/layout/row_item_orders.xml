<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/nav_header_vertical_spacing"
    android:layout_margin="@dimen/nav_header_vertical_spacing">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/nav_header_vertical_spacing">

        <TextView
            android:id="@+id/f"
            android:layout_width="91dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="27dp"
            android:layout_marginStart="27dp"
            android:padding="10dp"
            android:text="@string/order_id"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_id"
            android:layout_width="203dp"
            android:layout_height="41dp"
            android:layout_alignStart="@+id/order_pickup_date"
            android:layout_alignTop="@+id/f"
            android:padding="10dp"
            android:text="id"
            android:layout_alignLeft="@+id/order_pickup_date" />

        <TextView
            android:id="@+id/l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/f"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/f"
            android:layout_marginTop="54dp"
            android:padding="10dp"
            android:text="@string/order_date"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_date"
            android:layout_width="201dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/l"
            android:layout_alignStart="@+id/order_id"
            android:padding="10dp"
            android:text="date"
            android:layout_alignLeft="@+id/order_id" />

        <TextView
            android:id="@+id/a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/f"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/f"
            android:layout_marginTop="109dp"
            android:padding="10dp"
            android:text="@string/pickup_date"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_pickup_date"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/a"
            android:layout_marginEnd="22dp"
            android:layout_marginRight="22dp"
            android:padding="10dp"
            android:text="date for pickup" />

        <TextView
            android:id="@+id/s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/f"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/f"
            android:layout_marginTop="164dp"
            android:padding="10dp"
            android:text="@string/status"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_status"
            android:layout_width="197dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/order_id"
            android:layout_alignStart="@+id/order_id"
            android:layout_alignTop="@+id/s"
            android:padding="10dp"
            android:text="status of order" />

    </RelativeLayout>
</android.support.v7.widget.CardView>